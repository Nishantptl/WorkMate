<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Activities.ViewProjectActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarViewProject"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageButton
                android:id="@+id/imgBackProjectDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Project Details"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Project Details Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProjectDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iconProjectName"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_project"
                        app:tint="#757575"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvProjectName"
                        app:layout_constraintBottom_toBottomOf="@+id/tvProjectName"/>

                    <TextView
                        android:id="@+id/tvProjectName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/iconProjectName"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Sample Project Name" />

                    <View
                        android:id="@+id/dividerProjectDetails"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E0E0"
                        app:layout_constraintTop_toBottomOf="@+id/tvProjectName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/iconProjectRequirements"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_reason"
                        app:tint="#757575"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dividerProjectDetails" />

                    <TextView
                        android:id="@+id/tvProjectRequirementsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Requirements:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/iconProjectRequirements"
                        app:layout_constraintTop_toTopOf="@+id/iconProjectRequirements"
                        app:layout_constraintBottom_toBottomOf="@+id/iconProjectRequirements"/>

                    <TextView
                        android:id="@+id/tvProjectRequirements"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/tvProjectRequirementsLabel"
                        app:layout_constraintTop_toBottomOf="@+id/tvProjectRequirementsLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Detailed project requirements..." />

                    <ImageView
                        android:id="@+id/iconProjectDeadline"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#757575"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvProjectRequirements" />

                    <TextView
                        android:id="@+id/tvProjectDeadlineLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Deadline : "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/iconProjectDeadline"
                        app:layout_constraintTop_toTopOf="@+id/iconProjectDeadline"
                        app:layout_constraintBottom_toBottomOf="@+id/iconProjectDeadline"/>

                    <TextView
                        android:id="@+id/tvProjectDeadline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/tvProjectDeadlineLabel"
                        app:layout_constraintTop_toTopOf="@+id/iconProjectDeadline"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="YYYY-MM-DD" />

                    <ImageView
                        android:id="@+id/iconTeamMembers"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_team"
                        app:tint="#757575"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvProjectDeadline" />

                    <TextView
                        android:id="@+id/tvTeamMembersLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Team Members:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/iconTeamMembers"
                        app:layout_constraintTop_toTopOf="@+id/iconTeamMembers"
                        app:layout_constraintBottom_toBottomOf="@+id/iconTeamMembers"/>

                    <TextView
                        android:id="@+id/tvTeamMembers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/tvTeamMembersLabel"
                        app:layout_constraintTop_toBottomOf="@+id/tvTeamMembersLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Member 1, Member 2, Member 3" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tasks Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTasksLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tasks"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp" 
                        tools:listitem="@layout/item_task"/>
                    
                    <TextView
                        android:id="@+id/tvNoTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No tasks assigned to this project yet."
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Add New Task"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
