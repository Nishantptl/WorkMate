<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".Activities.AddProjectActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSaveProject"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Project"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtSubHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a new project for your organization"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="20dp"/>

            <!-- Project Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/edtProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Project Name"
                    android:elevation="2dp"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:minHeight="50dp"
                    android:padding="8dp"/>
            </LinearLayout>

            <!-- Requirements -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/edtProjectRequirement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Project Requirements"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:minHeight="80dp"
                    android:gravity="top"
                    android:padding="8dp"/>
            </LinearLayout>

            <!-- Deadline -->
            <LinearLayout
                android:id="@+id/layoutProjectDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_input"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/txtProjectDeadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select Project Deadline"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:id="@+id/imgProjectDeadline"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Select deadline"/>
            </LinearLayout>

            <!-- Members -->
            <!-- Whole expandable section -->
            <LinearLayout
                android:id="@+id/sectionMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <!-- Header row (click to expand/collapse) -->
                <LinearLayout
                    android:id="@+id/layoutSelectMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/txtMembersTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select Project Members"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgDown"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_down"
                        android:contentDescription="Expand" />
                </LinearLayout>

                <!-- Collapsible content -->
                <LinearLayout
                    android:id="@+id/layoutMembersContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtSelectedEmployees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selected Employees"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerHorizontal" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerEmployees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_select_employee"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSaveProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_add"
        android:contentDescription="Save Project"
        app:tint="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>
